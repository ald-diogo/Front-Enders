@page "/lista-estudantes"
@using FrontEnd_SIGA
@using FrontEnd_SIGA.Layout
@using CadastroNotasEstudantes.Services
@inject EstudanteService EstudanteService

<h3>Lista de Estudantes</h3>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Curso</th>
            <th>Morada</th>
            <th>Telefone</th>
            <th>Email</th>
            <th>Data de Nascimento</th>
        </tr>
    </thead>

    <tbody>     
        @foreach (var estudante in EstudanteService.GetEstudantes())
        { 
            <tr>
                <td>@estudante.Id</td>
                <td>@estudante.Nome</td>
                <td>@estudante.Curso</td>
                <td>@estudante.Morada</td>
                <td>@estudante.Telefone</td>
                <td>@estudante.Email</td>
                <td>@estudante.DataDeNascimento</td>
            </tr>

             var estatisticas = EstudanteService.CalcularEstatisticas(estudante);
            <li>
              @estudante.Nome - Média: 
              @estatisticas.media - Mediana: 
              @estatisticas.mediana - Desvio Padrão: 
              @estatisticas.desvioPadrao
            </li>
        }
      
    </tbody>
</table>

